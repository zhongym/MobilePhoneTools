<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#ff0000"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/layout_used_bottom_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bottom_item_layout_selector"
        android:clickable="true"
        android:gravity="center"
        android:onClick="used"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_used_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_used_bottom_item_selector" />

        <TextView
            android:id="@+id/tv_used_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="常用功能" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_software_bottom_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bottom_item_layout_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="software"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_software_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         
            android:gravity="center"
            android:src="@drawable/iv_software_bottom_item_selector" />

        <TextView
            android:id="@+id/tv_software_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="软件管理" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tool_bottom_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bottom_item_layout_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="tool"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_tool_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_tool_bottom_item_selector" />

        <TextView
            android:id="@+id/tv_tool_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="高级工具" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_setting_bottom_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bottom_item_layout_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="setting"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_setting_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_setting_bottom_item_selector" />

        <TextView
            android:id="@+id/tv_setting_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="设置中心" />
    </LinearLayout>

</LinearLayout>