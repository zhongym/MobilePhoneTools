<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhong="http://schemas.android.com/apk/res/com.zhong.mobilephonetools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_title_advancedtools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6bce22"
        android:gravity="center"
        android:text="高级工具"
        android:textColor="#ffffff"
        android:textSize="20sp" >
    </TextView>

    <TextView
        style="@style/tv_tool_item"
        android:layout_below="@id/tv_title_advancedtools"
        android:drawableLeft="@drawable/number_laction"
        android:onClick="numberLactionQuery"
        android:text="号码归属地查询" >
    </TextView>

    <include layout="@layout/bottom_item" />

</RelativeLayout>