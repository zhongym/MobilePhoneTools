<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title_advancedtools"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#6bce22"
            android:gravity="center"
            android:text="流量管理"
            android:textColor="#ffffff"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_numberlocation"
            style="@style/tv_tool_item"
            android:background="@drawable/tool_tv__selector"
            android:drawableEnd="@drawable/mem_icon"
            android:drawableLeft="@drawable/number_location"
            android:paddingRight="10dp"
            android:text="套餐设置" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <SlidingDrawer
        android:id="@+id/sd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@id/handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lock" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@id/content"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#44000000" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是内容" />
        </LinearLayout>
    </SlidingDrawer>

</RelativeLayout>